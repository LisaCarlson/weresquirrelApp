extends ../layout

block content
  nav.navbar.navbar-inverse
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/colonies') Home
      ul.nav.navbar-nav.navbar-right
        li
          a(href='/colonies/weresquirrels') SEE ALL WERESQUIRRELS
  .container
    .row
      for colony in allColonies
        .col-md-3.padding-top.colony
          h2.text-warning= colony.name
          h3.text-success Duels Won: 
            =  colony.duelsWon.length
          a.text-info(href='/colonies/'+colony._id) See Colony

